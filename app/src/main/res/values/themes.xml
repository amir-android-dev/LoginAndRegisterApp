<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoginAndRegisterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myDrawableImage">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/purple_700</item>
        <item name="android:textColor">@color/teal_700</item>
     <item name="android:textColorHint">@color/purple_200</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="myButton" parent="Widget.AppCompat.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:tint">@color/purple_500</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>